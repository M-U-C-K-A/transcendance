model Invitation {
	id			Int			@id @default(autoincrement())
	senderId	Int
	recipientId	Int
	matchType	MatchType
	createdAt	DateTime	@default(now())
	expireAt	DateTime

	sender			UserInfo		@relation("senderId", fields: [senderId], references: [id])
	recipient		UserInfo		@relation("recipientId", fields: [recipientId], references: [id])
}

model Message {
	id			Int			@id @default(autoincrement())
	senderId	Int
	recipientId	Int
	content		String
	sendAt		DateTime	@default(now())
	readStatus	Boolean
	status		Boolean // define if the message is private or not
	messageType	messageType

	sender			UserInfo		@relation("senderId", fields: [senderId], references: [id])
	recipient		UserInfo		@relation("recipientId", fields: [recipientId], references: [id])
}

enum messageType {
	Message
	Invitation
}
